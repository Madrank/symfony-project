{% extends 'base.html.twig' %}

{% block title %}Modifier le ticket #{{ ticket.id }}{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header">
                <h1 class="h3 mb-0">Modifier le ticket #{{ ticket.id }}</h1>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                    {{ form_row(form.authorEmail) }}
                    {{ form_row(form.description) }}
                    {{ form_row(form.category) }}
                    {{ form_row(form.status) }}
                    {{ form_row(form.responsible) }}
                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                        <a href="{{ path('app_ticket_show', {'id': ticket.id}) }}" class="btn btn-secondary">Annuler</a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %} 